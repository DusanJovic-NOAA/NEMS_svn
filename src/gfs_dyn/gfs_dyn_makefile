$(LIBDIR)/lib/$(TARGET):  $(OBJ_MOD) $(OBJS0) $(OBJS) $(OBJS_IO) 
	$(AR) $(ARFLAGS) $(LIBDIR)/lib/$(TARGET) $(OBJ_MOD) $(OBJS0) $(OBJS) $(OBJS_IO) 
	echo " $(TARGET) created!"

clean:
	/bin/rm -f $(OBJ_MOD) 
	/bin/rm -f $(OBJS0) 
	/bin/rm -f $(OBJS) 
	/bin/rm -f $(OBJS_IO)
	/bin/rm -f *.mod 
	/bin/rm -f *.o
	/bin/rm -f $(LIBDIR)/lib/$(TARGET)

.f.o:
	$(FC) $(FFLAGS) -c $< 


