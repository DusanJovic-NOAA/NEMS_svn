##  This is an elementary grid component or say independent grid component ##
#---------------
# For non-debug.
#---------------
#
include ../../ush/compile_settings
MAKEFILE=gfs_io_makefile
TARGET= gfs_io.a
# *****************************************************************
#
OBJ_IO	= \
	  module_WRITE_INTERNAL_STATE_GFS.o   \
	  module_GET_CONFIG_WRITE_GFS.o       \
	  module_WRITE_ROUTINES_GFS.o         \
	  module_WRITE_GRID_COMP_GFS.o 



INCS = \
		$(INCDIR)/f_hpm.h mpi_inc.h $(INCDIR)/function2


# *****************************************************************
#

.SUFFIXES: .F90 .f90 .o

default:
	@gmake -f $(MAKEFILE) all

all: $(LIBDIR)/lib/$(TARGET)

# *****************************************************************
#

$(LIBDIR)/lib/$(TARGET):  $(OBJ_IO)
	$(AR) $(ARFLAGS) $@ $?

$(OBJ_IO):     $(DEPS)
	$(CPP) $(CPPFLAGS) $*.F90 > $*.f90
	$(FC) $(FFLAG_GFS_IO) -c $*.f90

clean:
	/bin/rm -f $(OBJS_IO) 
	/bin/rm -f *.mod 
	/bin/rm -f *.f90
	/bin/rm -f *.o
	/bin/rm -f $(LIBDIR)/lib/$(TARGET)

#
# DEPENDENCIES :
#
module_WRITE_GRID_COMP_GFS.o:  \
				module_WRITE_ROUTINES_GFS.o \
				module_WRITE_INTERNAL_STATE_GFS.o

module_GET_CONFIG_WRITE_GFS.o:      \
				module_WRITE_INTERNAL_STATE_GFS.o

module_WRITE_ROUTINES_GFS.o :       \
				module_WRITE_INTERNAL_STATE_GFS.o 

#
# *****************************************************************
#

