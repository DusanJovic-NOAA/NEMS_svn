include ../../ush/compile_settings
TARGET= gfs_io.a
# *****************************************************************
#
OBJ_IO	= \
	  module_WRITE_INTERNAL_STATE_GFS.o   \
	  module_GET_CONFIG_WRITE_GFS.o       \
	  module_WRITE_ROUTINES_GFS.o         \
	  module_WRITE_GRID_COMP_GFS.o 



INCS = \
		$(INCDIR)/f_hpm.h mpi_inc.h $(INCDIR)/function2

#
# *****************************************************************
#

$(LIBDIR)/lib/$(TARGET):  $(OBJ_IO) 
	$(AR) $(ARFLAGS) $(LIBDIR)/lib/$(TARGET) $(OBJ_IO)  
	echo " $(TARGET) created!"

clean:
	/bin/rm -f $(OBJ_IO1) $(OBJS_IO) 
	/bin/rm -f *.mod 
	/bin/rm -f *.o
	/bin/rm -f $(LIBDIR)/lib/$(TARGET)

#.F.o:
#	$(FC) $(FFLAGS) $(FFLAG_GFS_IO) -c -d $< 
#.f.o:
#	$(FC) $(FFLAGS) $(FFLAG_GFS_IO) -c $< 

.SUFFIXES:      .F90 .f90 .o

.F90.f90:
	$(CPP) $(CPPFLAGS) $< > $*.f90

$(OBJ_IO):     $(DEPS)
	$(FC) $(FFLAG_GFS_IO) -c $<

#
# DEPENDENCIES :
#
module_WRITE_GRID_COMP_GFS.o:  \
				module_WRITE_ROUTINES_GFS.o \
				module_WRITE_INTERNAL_STATE_GFS.o

module_GET_CONFIG_WRITE_GFS.o:      \
