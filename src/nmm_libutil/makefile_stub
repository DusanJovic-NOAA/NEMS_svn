################################################################################
# 
#     Makefile for Global NMM Model 
#
#     Use:
#     make         -  build the executable
#     make clean   -  start with a clean slate
#
#     The following macros will be of interest:
#
#         TARGET   - name of the executable
#         FC       - name of Fortran compiler
#         CPP      - name of CPP
#         ARCH     - architecture
#         CPPFLAGS - CPP flags
#         OPTS     - compiler code optimizations
#         LIST     - source listing
#         SMP      - threading
#         TRAPS    - runtime traps for floating point exceptions
#         PROFILE  - source code profiling ( -pg )
#         DEBUG    - -g
#         MEM      - user data area and stack size
#         MAP      - load map
#         W3LIB    - w3lib
#         ESSL     - ESSL library
#         MASS     - MASS library
#         TRACE    - MPI tracing
#
#################################################################################
#
# Define the name of the executable
#
#
include ../../ush/compile_settings
MAKEFILE=makefile_stub
TARGET = nmm_libutil_stub.a
 
MODULES=	\
		module_ATM_INTERNAL_STATE_STUB.o  \
		module_CLOCKTIMES_STUB.o \
		module_INCLUDE_STUB.o \
		module_DM_PARALLEL_STUB.o \
		module_EXCHANGE_STUB.o \
		module_CONSTANTS_STUB.o \
		module_CONTROL_STUB.o \
		module_DIGITAL_FILTER_NMM_STUB.o \
		module_DIAGNOSE_STUB.o \
		module_ERR_MSG_STUB.o

.SUFFIXES:	.F90 .f90 .o

.F90.f90:
	$(CPP) $(CPPFLAGS) $< > $*.f90

default:
	@gmake -f $(MAKEFILE) all

all: $(LIBDIR)/libstub/$(TARGET)

$(LIBDIR)/libstub/$(TARGET): $(MODULES) 
	$(AR) $(ARFLAGS) $@ $?

$(MODULES):  %.o: %.f90	$(DEPS)
	$(F90) $(FFLAG_NMM_UTIL) -c $*.f90

clean:	
	/bin/rm -f  $(LIBDIR)/libstub/$(TARGET) 
	/bin/rm -f  *.f90 
	/bin/rm -f  *.o 
	/bin/rm -f  *.mod 

#
# DEPENDENCIES :
#
