################################################################################
################################################################################
# 
#     Makefile for Global NMM Model 
#
#     Use:
#     make         -  build the executable
#     make clean   -  start with a clean slate
#
#     The following macros will be of interest:
#
#         TARGET   - name of the executable
#         CPP      - name of CPP
#         ARCH     - architecture
#         CPPFLAGS - CPP flags
#         OPTS     - compiler code optimizations
#         LIST     - source listing
#         SMP      - threading
#         TRAPS    - runtime traps for floating point exceptions
#         PROFILE  - source code profiling ( -pg )
#         DEBUG    - -g
#         MEM      - user data area and stack size
#         MAP      - load map
#         W3LIB    - w3lib
#         ESSL     - ESSL library
#         MASS     - MASS library
#         TRACE    - MPI tracing
#
#################################################################################

# Define the name of the executable
#
#
# CPP, Compiler, and Linker Options
#
#
include ../../../build/compile_settings
MAKEFILE=makefile
TARGET= atmos.a

MODULE=        \
	_MODULES_	


MODULE_f90 = ${MODULE:.o=.f90}

.SUFFIXES:	.F90 .f90 .o

.F90.f90:
	$(CPP) $(CPPFLAGS) $< > $*.f90

default:
	@gmake -f $(MAKEFILE) all

all: $(LIBDIR)/lib/$(TARGET)

$(LIBDIR)/lib/$(TARGET): $(MODULE) 
	$(AR) $(ARFLAGS) $@ $?

$(MODULE): %.o: %.f90 $(DEPS)
	$(F90) $(FFLAGSDB) -c $*.f90

depend: $(MODULE_f90) 
	$(MAKEDEPEXEC) 

clean:	
	/bin/rm -f  $(LIBDIR)/lib/$(TARGET) 
	/bin/rm -f *.f90 
	/bin/rm -f $(NEMSTOPDIR)/src/atmos/driver/atmos_grid/*.f90
	/bin/rm -f *.lst 
	/bin/rm -f *.o 
	/bin/rm -f *.mod 
	/bin/rm -f lm 
	/bin/rm -f map
	/bin/rm -f makefile
	/bin/rm -f depend 

include depend
