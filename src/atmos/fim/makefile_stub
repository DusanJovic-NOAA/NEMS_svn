include ../../conf/configure.nems

MAKEFILE = makefile_stub

UTILINCS = -I../../share

LIBRARY       = libfim.a

MODULES  = fim_grid_comp_stub.o

.SUFFIXES:
.SUFFIXES: .F90 .f90 .o

.F90.f90:
	$(CPP) $(CPPFLAGS) $< > $*.f90

default:
	@gmake -f $(MAKEFILE) $(LIBRARY)

$(LIBRARY): $(MODULES)
	$(AR) $(ARFLAGS) $@ $?
	
$(MODULES): %.o: %.f90
	$(FC) $(FFLAGS_FIM) $(UTILINCS) -c $*.f90

clean:
	/bin/rm -f $(LIBRARY) *.o *.mod *.lst lm map
