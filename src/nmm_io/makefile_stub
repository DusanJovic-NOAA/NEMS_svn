################################################################################
# 
#     Makefile for Global NMM Model 
#
#     Use:
#     make         -  build the executable
#     make clean   -  start with a clean slate
#
#     The following macros will be of interest:
#
#         TARGET   - name of the executable
#         FC       - name of Fortran compiler
#         CPP      - name of CPP
#         ARCH     - architecture
#         CPPFLAGS - CPP flags
#         OPTS     - compiler code optimizations
#         LIST     - source listing
#         SMP      - threading
#         TRAPS    - runtime traps for floating point exceptions
#         PROFILE  - source code profiling ( -pg )
#         DEBUG    - -g
#         MEM      - user data area and stack size
#         MAP      - load map
#         W3LIB    - w3lib
#         ESSL     - ESSL library
#         MASS     - MASS library
#         TRACE    - MPI tracing
#
#################################################################################
#
# Define the name of the executable
#
#
# CPP, Compiler, and Linker Options
#
TARGET     = nmm_io_stub.a
UTIL     = nmm_util
FC       = xlf
PROF     = -g -pg
PROF     =
ARCH     = AIX
CPP      = /lib/cpp -P
CPPFLAGS = -DENABLE_SMP -DIBM
OPTS     = -O2 -qmaxmem=-1 -qarch=auto -qtune=auto $(PROF) -NS2000
#TRAPS    = -qinitauto=FF911299 -qflttrap=ov:zero:inv:en -qsigtrap -C
TRAPS    = 
#
# Assemble Options
#
FINCO    = -I/meso/save/${USER}/NEMS/mod/esmf_3_1_0rp2
FINCP    = -I/meso/save/${USER}/NEMS/src/nmm_libutil
FINCS	 = $(FINCO) $(FINCP)
FFLAGS   = $(OPTS) $(FINCS) $(TRAPS)
#

MODULEIO=	\
		nemsio_module.o


MODULES=	\
		module_GET_CONFIG_WRITE.o \
		module_WRITE_GRID_COMP_STUB.o \
		module_WRITE_ROUTINES.o \
		module_WRITE_INTERNAL_STATE.o 

INCLUDES=	../../inc/kind.inc

DEPS= $(INCLUDES)

AR = ar
ARFLAGS = -r


.SUFFIXES:	.F90 .f90 .o

.F90.f90:
	$(CPP) $(CPPFLAGS) $< > $*.f90

$(TARGET): $(MODULEIO) $(MODULES) 
	$(AR) $(ARFLAGS) $(TARGET) $(MODULEIO) $(MODULES) 

$(MODULES):	$(DEPS)
	$(FC) $(FFLAGS) -c $<

clean:	
	/bin/rm -f  $(TARGET) *.f90 *.lst *.o *.mod lm map

#
# DEPENDENCIES :
#
module_WRITE_GRID_COMP_STUB.o:  \
				module_WRITE_ROUTINES.o \
				module_WRITE_INTERNAL_STATE.o 

module_GET_CONFIG_WRITE.o:     	\
				module_WRITE_INTERNAL_STATE.o 

module_WRITE_ROUTINES.o :       \
				module_WRITE_INTERNAL_STATE.o \
				nemsio_module.o
