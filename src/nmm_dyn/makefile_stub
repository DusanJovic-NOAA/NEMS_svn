################################################################################
# 
#     Makefile for Global NMM Model 
#
#     Use:
#     make         -  build the executable
#     make clean   -  start with a clean slate
#
#     The following macros will be of interest:
#
#         TARGET   - name of the executable
#         FC       - name of Fortran compiler
#         CPP      - name of CPP
#         ARCH     - architecture
#         CPPFLAGS - CPP flags
#         OPTS     - compiler code optimizations
#         LIST     - source listing
#         SMP      - threading
#         TRAPS    - runtime traps for floating point exceptions
#         PROFILE  - source code profiling ( -pg )
#         DEBUG    - -g
#         MEM      - user data area and stack size
#         MAP      - load map
#         W3LIB    - w3lib
#         ESSL     - ESSL library
#         MASS     - MASS library
#         TRACE    - MPI tracing
#
#################################################################################
#
# Define the name of the executable
#
#
# CPP, Compiler, and Linker Options
#
TARGET     = nmm_dyn_stub.a
UTIL = nmm_util
UTILINCS = -I../$(UTIL)
GCINCS  = $(UTILINCS)
FC       = xlf
PROF     = -g -pg
PROF     =
ARCH     = AIX
CPP      = /lib/cpp -P
#CPPFLAGS = -DIBM
CPPFLAGS = -DENABLE_SMP -DIBM
SMP      = -qsmp=omp
#SMP      = 
MAF      = -qfloat=nomaf
OPTS     = -O2 -qmaxmem=-1 -qarch=auto -qtune=auto $(PROF) -NS2000
TRAPS    = 
#
# Assemble Options
#
FINCO    = -I/meso/save/${USER}/NEMS/mod/esmf_3_1_0rp2
FINCS	 = $(FINCO) 
FFLAGS   = $(OPTS) $(FINCS) $(TRAPS)
FFLAGSNT = $(OPTS) $(FINCS)
#

MODULES=	\
		module_DYN_PHY_CPL_COMP_STUB.o 

MODULE_DGC=	module_DYNAMICS_GRID_COMP_STUB.o

INCLUDES=	../../inc/kind.inc


DEPS= $(INCLUDES)

AR = ar
ARFLAGS = -r


.SUFFIXES:	.F90 .f90 .o

.F90.f90:
	$(CPP) $(CPPFLAGS) $< > $*.f90

$(TARGET): $(MODULES) $(MODULE_DGC) 
	$(AR) $(ARFLAGS) $(TARGET) $(MODULES) $(MODULE_DGC)

$(MODULES):	$(DEPS)
	$(FC) $(FFLAGS) -c $<

$(MODULE_DGC):	$(DEPS)
	$(FC) $(FFLAGSNT) -c $<

clean:	
	/bin/rm -f  $(TARGET) *.f90 *.lst *.o *.mod lm map

