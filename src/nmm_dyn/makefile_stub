################################################################################
# 
#     Makefile for Global NMM Model 
#
#     Use:
#     make         -  build the executable
#     make clean   -  start with a clean slate
#
#     The following macros will be of interest:
#
#         TARGET   - name of the executable
#         FC       - name of Fortran compiler
#         CPP      - name of CPP
#         ARCH     - architecture
#         CPPFLAGS - CPP flags
#         OPTS     - compiler code optimizations
#         LIST     - source listing
#         SMP      - threading
#         TRAPS    - runtime traps for floating point exceptions
#         PROFILE  - source code profiling ( -pg )
#         DEBUG    - -g
#         MEM      - user data area and stack size
#         MAP      - load map
#         W3LIB    - w3lib
#         ESSL     - ESSL library
#         MASS     - MASS library
#         TRACE    - MPI tracing
#
#################################################################################
#
# Define the name of the executable
#
#
# CPP, Compiler, and Linker Options
#
include ../../ush/compile_settings
MAKEFILE=makefile_stub
TARGET= nmm_dyn_stub.a
#

MODULES=	\
		module_DYN_PHY_CPL_COMP_STUB.o \
		module_DYNAMICS_INTERNAL_STATE_STUB.o \
		module_GET_CONFIG_DYN_STUB.o 

MODULE_DGC=	\
		module_DYNAMICS_GRID_COMP_STUB.o

.SUFFIXES:      .F90 .f90 .o

.F90.f90:
	$(CPP) $(CPPFLAGS) $< > $*.f90

default:
	@gmake -f $(MAKEFILE) all

all: $(LIBDIR)/libstub/$(TARGET)

$(LIBDIR)/libstub/$(TARGET): $(MODULES) $(MODULE_DGC) 
	$(AR) $(ARFLAGS) $@ $?

$(MODULES):	$(DEPS)
	$(F90) $(FFLAG_NMM_DYN) -c $*.f90

$(MODULE_DGC):	$(DEPS)
	$(F90) $(FFLAG_NMM_DYN) -c $*.f90
clean:	
	/bin/rm -f $(LIBDIR)/libstub/$(TARGET) 
	/bin/rm -f *.f90 
	/bin/rm -f *.lst 
	/bin/rm -f *.o 
	/bin/rm -f *.mod 
	/bin/rm -f lm 
	/bin/rm -f map
