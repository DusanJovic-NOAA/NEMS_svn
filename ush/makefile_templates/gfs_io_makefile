##  This is an elementary grid component or say independent grid component ##
#---------------
# For non-debug.
#---------------
.SUFFIXES: .o .f .F .h
#
include ../../ush/compile_settings
TARGET= gfs_io.a
# *****************************************************************
#
OBJ_IO	= \
		wrt3d.o            \
		wrt3d_hyb.o        \
		wrtsfc.o           



INCS = \
		$(INCDIR)/f_hpm.h mpi_inc.h $(INCDIR)/function2

#
# *****************************************************************
#

$(LIBDIR)/lib/$(TARGET):  $(OBJ_IO) 
	$(AR) $(ARFLAGS) $(LIBDIR)/lib/$(TARGET) $(OBJ_IO)  
	echo " $(TARGET) created!"

clean:
	/bin/rm -f $(OBJS_IO) 
	/bin/rm -f *.mod 
	/bin/rm -f *.o
	/bin/rm -f $(LIBDIR)/lib/$(TARGET)

.F.o:
	$(FC) $(FFLAGS) $(FFLAG_GFS_IO) -c -d $< 
.f.o:
	$(FC) $(FFLAGS) $(FFLAG_GFS_IO) -c $< 


#
# *****************************************************************
#
wrtsfc.o:       wrtsfc.f
		$(FC) $(FFLAGS) $(FFLAG_GFS_IO) -c wrtsfc.f
wrt3d.o:        wrt3d.f
		$(FC) $(FFLAGS) $(FFLAG_GFS_IO) -c wrt3d.f
wrt3d_hyb.o:    wrt3d_hyb.f
		$(FC) $(FFLAGS) $(FFLAG_GFS_IO) -c wrt3d_hyb.f
