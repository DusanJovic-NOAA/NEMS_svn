####   requires necessary grid components
#
#
include ../../ush/compile_settings
# *****************************************************************
#
all: 
	cd $(GFS_UTIL) && gmake 
	cd $(GOCART) && export ESMADIR=`pwd` && gmake -C src install GOCART_MODE=$(GOCART_MODE)
	cd $(GFS_DYN) && gmake 
	cd $(GFS_PHY) && gmake 
	cd $(GFS_IO) && gmake 
	cd $(ATM) && gmake 
	/bin/rm -f $(EXEDIR)/GFS_NEMS.x 
	$(CPP) $(CPPFLAGS) $(ROOT).F90 > $(ROOT).f90
	$(F90) $(FFLAG_GFS_MAIN) -c $(ROOT).f90
	$(LDR) $(LDFLAGS) -o $(EXEDIR)/GFS_NEMS.x $(OBJS) $(LIB)
	echo "GFS_NEMS.x is created for GFS core."

clean:
	cd $(GFS_DYN) && gmake clean
	cd $(GFS_PHY) && gmake clean
	cd $(GFS_IO) && gmake clean
	cd $(GFS_UTIL) && gmake clean
	cd $(GOCART) && export ESMADIR=`pwd` && gmake -C src realclean GOCART_MODE=$(GOCART_MODE)
	cd $(ATM) && gmake clean
	/bin/rm -f $(EXEDIR)/GFS_NEMS.x
	/bin/rm -f *.o 
	/bin/rm -f *.mod
	/bin/rm -f *.f90
	/bin/rm -f *.lst
	/bin/rm -f lm
	/bin/rm -f map
	/bin/rm -f $(USHDIR)/makefile_templates/main_makefile_nmm
	/bin/rm -f $(USHDIR)/compile_settings
	echo "directories cleaned."
