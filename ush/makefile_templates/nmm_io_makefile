################################################################################
# 
#     Makefile for Global NMM Model 
#
#     Use:
#     make         -  build the executable
#     make clean   -  start with a clean slate
#
#     The following macros will be of interest:
#
#         TARGET   - name of the executable
#         FC       - name of Fortran compiler
#         CPP      - name of CPP
#         ARCH     - architecture
#         CPPFLAGS - CPP flags
#         OPTS     - compiler code optimizations
#         LIST     - source listing
#         SMP      - threading
#         TRAPS    - runtime traps for floating point exceptions
#         PROFILE  - source code profiling ( -pg )
#         DEBUG    - -g
#         MEM      - user data area and stack size
#         MAP      - load map
#         W3LIB    - w3lib
#         ESSL     - ESSL library
#         MASS     - MASS library
#         TRACE    - MPI tracing
#
#################################################################################
#
# Define the name of the executable
#
#
include ../../ush/compile_settings
TARGET=nmm_io.a
 
MODULEIO=       \
		nemsio_module.o

MODULES=	\
		module_GET_CONFIG_WRITE.o \
		module_WRITE_GRID_COMP.o \
		module_WRITE_ROUTINES.o \
		module_WRITE_INTERNAL_STATE.o 

.SUFFIXES:	.F90 .f90 .o

.F90.f90:
	$(CPP) $(CPPFLAGS) $< > $*.f90

$(LIBDIR)/lib/$(TARGET): $(MODULEIO) $(MODULES) 
	$(AR) $(ARFLAGS) $(LIBDIR)/lib/$(TARGET) $(MODULEIO) $(MODULES) 

$(MODULEIO):     $(DEPS)
	$(FC) $(FFLAG_NMM_IO) -c $<

$(MODULES):	$(DEPS)
	$(FC) $(FFLAG_NMM_IO) -c $<

clean:	
	/bin/rm -f  $(LIBDIR)/lib/$(TARGET) 
	/bin/rm -f  *.f90 
	/bin/rm -f  *.lst 
	/bin/rm -f  *.o 
	/bin/rm -f  *.mod 
	/bin/rm -f  lm 
	/bin/rm -f  map

#
# DEPENDENCIES :
#
module_WRITE_GRID_COMP.o:  \
                                module_WRITE_ROUTINES.o \
                                module_WRITE_INTERNAL_STATE.o 

module_GET_CONFIG_WRITE.o:     	\
                                module_WRITE_INTERNAL_STATE.o 

module_WRITE_ROUTINES.o :       \
                                module_WRITE_INTERNAL_STATE.o \
				nemsio_module.o
