## IAER=0 (no aerosols); 11 (opac for sw/lw) and 22 (gocart for sw/lw)

 export IAER=_IAER_
 export IEMS=_IEMS_
 export ICO2=_ICO2_
 export ISOL=_ISOL_
 export SLG=_SLG_
