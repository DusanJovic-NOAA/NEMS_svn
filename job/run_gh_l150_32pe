#
#     Forecaset script and executable name
#
#export NEMSDIR=/nems/save/Jun.Wang/nems/wam/wam2zeus
 export NEMSDIR=/global/save/Henry.Juang/2013/nems/ticket_next
 cp -p ${NEMSDIR}/job/exglobal_fcst.sh.sms_nems .
