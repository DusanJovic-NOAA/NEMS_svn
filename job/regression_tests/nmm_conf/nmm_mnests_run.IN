#!/bin/ksh

RUNDIR=_RUND_
SRCDIR=_SRCD_

mkdir -p $RUNDIR
cd $RUNDIR
rm -rf $RUNDIR/*

cp _RTPWD_/NMMB_mvg_nests/input_domain_01_nemsio  input_domain_01_nemsio
cp _RTPWD_/NMMB_mvg_nests/input_domain_02_nemsio  input_domain_02_nemsio
cp _RTPWD_/NMMB_mvg_nests/input_domain_03_nemsio  input_domain_03_nemsio
cp _RTPWD_/NMMB_mvg_nests/input_domain_04         input_domain_04
cp _RTPWD_/NMMB_mvg_nests/boco.* .
cp _RTPWD_/data/* .
cp _RTPWD_/NMMB_mvg_nests/GWD_bin_* .
cp _RTPWD_/NMMB_mvg_nests/*_3 .
cp _RTPWD_/NMMB_mvg_nests/*_9 .

cp $SRCDIR/job/regression_tests/atmos.configure_nmm atmos.configure
cp $SRCDIR/job/regression_tests/ocean.configure .
cp $SRCDIR/job/regression_tests/configure_file_0* .
cp configure_file_01 model_configure

ln -sf global_o3prdlos.f77 fort.28
ln -sf global_o3clim.txt fort.48

cp $SRCDIR/job/regression_tests/solver_state.txt .
cp $SRCDIR/job/regression_tests/moving_nest_shift.txt .
_TS_cp $SRCDIR/job/regression_tests/ts_locations.nml .

cp $SRCDIR/exe/NEMS.x .

if [ $SCHEDULER = 'loadleveler' ]; then
  cp $SRCDIR/job/regression_tests/nmm_ll .
  llsubmit nmm_ll 2>&1 | grep submitted > /dev/null
elif [ $SCHEDULER = 'moab' ]; then
  cp $SRCDIR/job/regression_tests/nmm_msub .
  msub nmm_msub > /dev/null
elif [ $SCHEDULER = 'pbs' ]; then
  cp $SRCDIR/job/regression_tests/nmm_qsub .
  qsub nmm_qsub > /dev/null
elif [ $SCHEDULER = 'lsf' ]; then
  cp $SRCDIR/job/regression_tests/nmm_bsub .
  bsub < nmm_bsub > /dev/null
fi

exit
